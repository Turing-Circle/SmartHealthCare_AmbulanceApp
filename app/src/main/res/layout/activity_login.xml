<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background"
    android:elevation="16dp"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.shubhamr.myfirstmapactivity.Login">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="296dp"
        android:layout_height="190dp"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/final_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1.25"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/linearbackground"
        android:layout_above="@+id/bn_login"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:weightSum="3.75"
        android:layout_alignParentEnd="true">


        <TextView
            android:id="@+id/logintextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="35dp"
            android:layout_weight="0.04"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:text="ambulance login"
            android:textColor="#48D1CC"
            android:textSize="30sp"
            android:textStyle="bold" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textInputLayout3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="23dp"
            android:textColorHint="@android:color/white">

            <EditText
                android:id="@+id/idambu"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/textInputLayout"
                android:layout_alignLeft="@+id/logoname"
                android:layout_alignStart="@+id/logoname"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/account"
                android:background="@drawable/roundtext"
                android:drawablePadding="15dp"
                android:hint="Ambulance ID"
                android:inputType="text"
                android:padding="10dp"
                android:textColorHint="@android:color/white" />

        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bn_login"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/roundtext"
            android:layout_marginRight="10dp"
            android:layout_weight="0.5"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textWebPassword"
            android:padding="10dp"
            android:paddingTop="10dp"
            android:textColorHint="@android:color/white" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bn_login"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="13dp"
            android:textColorHint="@android:color/white">

        </android.support.design.widget.TextInputLayout>



    </LinearLayout>

    <Button
        android:id="@+id/bn_login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:layout_weight="0.35"
        android:background="@drawable/roundedbutton"
        android:singleLine="true"
        android:text="SIGN IN"
        android:textColor="@android:color/background_light"
        android:textStyle="bold" />


</RelativeLayout>

